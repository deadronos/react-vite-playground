{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest", "@testing-library/jest-dom"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@triplex/*": [".triplex/*"]
    }
  },
  "include": [
    "src/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "exclude": ["node_modules"]
}
